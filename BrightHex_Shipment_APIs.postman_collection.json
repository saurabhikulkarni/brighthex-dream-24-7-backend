{
  "info": {
    "name": "BrightHex Shipment APIs",
    "description": "Complete API collection for order, address, and tracking management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Addresses",
      "item": [
        {
          "name": "Create Address",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"user123\",\n  \"fullName\": \"John Doe\",\n  \"phoneNumber\": \"9876543210\",\n  \"addressLine1\": \"123 Main Street\",\n  \"addressLine2\": \"Apt 4B\",\n  \"city\": \"Mumbai\",\n  \"state\": \"Maharashtra\",\n  \"pincode\": \"400001\",\n  \"country\": \"India\",\n  \"isDefault\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/addresses",
              "host": ["{{baseUrl}}"],
              "path": ["api", "addresses"]
            }
          }
        },
        {
          "name": "Get All Addresses",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/addresses?userId=user123",
              "host": ["{{baseUrl}}"],
              "path": ["api", "addresses"],
              "query": [
                {
                  "key": "userId",
                  "value": "user123"
                }
              ]
            }
          }
        },
        {
          "name": "Get Address by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/addresses/{{addressId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "addresses", "{{addressId}}"]
            }
          }
        },
        {
          "name": "Update Address",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"Jane Doe\",\n  \"phoneNumber\": \"9876543210\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/addresses/{{addressId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "addresses", "{{addressId}}"]
            }
          }
        },
        {
          "name": "Set Default Address",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"user123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/addresses/{{addressId}}/set-default",
              "host": ["{{baseUrl}}"],
              "path": ["api", "addresses", "{{addressId}}", "set-default"]
            }
          }
        },
        {
          "name": "Get Default Address",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/addresses/default/user123",
              "host": ["{{baseUrl}}"],
              "path": ["api", "addresses", "default", "user123"]
            }
          }
        },
        {
          "name": "Delete Address",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/api/addresses/{{addressId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "addresses", "{{addressId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"user123\",\n  \"items\": [\n    {\n      \"productId\": \"prod1\",\n      \"productTitle\": \"T-Shirt\",\n      \"productImage\": \"https://example.com/img.jpg\",\n      \"quantity\": 2,\n      \"pricePerUnit\": 500\n    }\n  ],\n  \"totalAmount\": 1000,\n  \"addressId\": \"{{addressId}}\",\n  \"paymentId\": \"{{paymentId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/orders",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders"]
            }
          }
        },
        {
          "name": "Get All Orders",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/orders?userId=user123&skip=0&limit=50",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders"],
              "query": [
                {
                  "key": "userId",
                  "value": "user123"
                },
                {
                  "key": "skip",
                  "value": "0"
                },
                {
                  "key": "limit",
                  "value": "50"
                }
              ]
            }
          }
        },
        {
          "name": "Get Order by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/orders/{{orderId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "{{orderId}}"]
            }
          }
        },
        {
          "name": "Get Order Status",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/orders/{{orderId}}/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "{{orderId}}", "status"]
            }
          }
        },
        {
          "name": "Update Order Status",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"PROCESSING\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/orders/{{orderId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "{{orderId}}"]
            }
          }
        },
        {
          "name": "Create Shipment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"customer@email.com\",\n  \"weight\": 500,\n  \"length\": 10,\n  \"breadth\": 10,\n  \"height\": 10,\n  \"order_items\": [\n    {\n      \"name\": \"Product Name\",\n      \"sku\": \"SKU123\",\n      \"units\": 2,\n      \"selling_price\": 500\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/orders/{{orderId}}/create-shipment",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "{{orderId}}", "create-shipment"]
            }
          }
        },
        {
          "name": "Cancel Order",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/api/orders/{{orderId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "{{orderId}}"]
            }
          }
        }
      ]
